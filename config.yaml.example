# Home Assistant Configuration
home_assistant:
  url: "http://localhost:8123"  # Home Assistant URL
  token: "YOUR_LONG_LIVED_ACCESS_TOKEN"  # Long-lived access token

# Sensor Configuration
sensor:
  name: "sensor.batteries_stan_pojemnosci"  # Sensor entity ID to monitor

# Power Consumption Sensors
# Can use either:
# - Instantaneous power sensors (Watts): power_active_phase_1, power_active_phase_2, etc.
# - Cumulative energy sensor (kWh): total_forward_active_energy (recommended)
power_consumption_sensors:
  - "sensor.zamel_mew_01_rok_caly_dom_total_forward_active_energy"

# Power Forecast Configuration
power_forecast:
  history_hours: 72  # Hours of historical data to analyze for forecasting

# Time Configuration
time:
  history_minutes: 90  # Number of minutes of historical data to fetch
  
# Forecast Configuration
forecast:
  threshold_percent: 5  # SOC threshold percentage for forecast alert

# Charging Optimization Configuration
charging:
  enabled: true  # Enable charging optimization
  battery_capacity_kwh: 10  # Battery capacity in kWh
  max_charging_power_kw: 5  # Maximum charging power from grid in kW
  allow_multiple_periods: true  # Allow multiple charging periods in a day
  
# OpenAI Configuration (optional, for AI-powered recommendations)
openai:
  api_key: ""  # OpenAI API key (leave empty to disable AI recommendations)
  
# pstryk.pl API Configuration
# API documentation: https://api.pstryk.pl/integrations/swagger/
# To get an API key, visit: https://api.pstryk.pl/
pstryk:
  api_key: ""  # API key (REQUIRED for charging optimization)
  timeout: 30  # Request timeout in seconds
  base_url: "https://api.pstryk.pl"  # Base API URL

